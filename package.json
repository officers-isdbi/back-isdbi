		"bullmq": "^5.49.1",
		"cloudinary": "^2.6.0",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"date-fns": "^4.1.0",
		"dotenv": "^16.5.0",
		"ejs": "^3.1.10",
		"envalid": "^8.0.0",
		"express": "^4.21.2",
		"express-rate-limit": "^7.5.0",
		"generate-password": "^1.7.1",
		"helmet": "^8.1.0",
		"http-status-codes": "^2.3.0",
		"ioredis": "^5.6.1",
		"jsonwebtoken": "^9.0.2",
		"mongodb": "^6.15.0",
		"mongoose": "^8.13.2",
		"morgan": "^1.10.0",
		"multer": "1.4.5-lts.2",
		"nodemailer": "^6.10.1",
		"pino": "^9.6.0",
		"pino-http": "^10.4.0",
		"sharp": "^0.34.1",
		"swagger-themes": "^1.4.3",
		"swagger-ui-express": "^5.0.1",
		"zod": "^3.24.3"
	},
	"description": "A backend for Doriane Care websites management that provides api to the admin dashboard of the websites managed by the solution provided by BloomQ and Jesuph jobs",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@faker-js/faker": "^9.7.0",
		"@types/cookie-parser": "^1.4.8",
		"@types/cors": "^2.8.17",
		"@types/ejs": "^3.1.5",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/lodash": "^4.17.16",
		"@types/morgan": "^1.9.9",
		"@types/multer": "^1.4.12",
		"@types/nodemailer": "^6.4.17",
		"@types/qs": "^6.9.18",
		"@types/supertest": "^6.0.3",
		"@types/swagger-ui-express": "^4.1.8",
		"concurrently": "^9.1.2",
		"cross-env": "^7.0.3",
		"express-serve-static-core": "^0.1.1",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.1",
		"lodash": "^4.17.21",
		"nodemon": "^3.1.9",
		"pino-pretty": "^13.0.0",
		"qs": "^6.14.0",
		"rimraf": "^6.0.1",
		"supertest": "^7.1.0",
		"tsc-alias": "1.8.13",
		"tsx": "^4.19.3",
		"typescript": "^5.8.3",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.1.1"
	},
	"license": "MIT",
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": ["biome check --apply --no-errors-on-unmatched"]
	},
	"main": "dist/src/index.js",
	"name": "pitch-back-end",
	"private": true,
	"repository": "Jesuph-jobs/pitch-back-end",
	"scripts": {
		"build": "tsc --project ./tsconfig.app.json && tsc-alias -p ./tsconfig.app.json",
		"build:windows": "tsc --project ./tsconfig.app.json & tsc-alias -p ./tsconfig.app.json",
		"clean": "rimraf dist coverage",
		"dev": "chcp 65001 && cross-env NODE_ENV=development nodemon --ext .ts,.tsx --exec \"pnpm run build:windows & node . | pino-pretty\"",
		"dev:linux": "NODE_ENV=development nodemon --ext .ts,.tsx --exec \"pnpm run build && node . | pino-pretty\"",
		"format": "biome format",
		"format:fix": "biome format --write",
		"lint": "biome check",
		"lint:fix": "biome check --fix",
		"lint:fix-unsafe": "biome check --fix --unsafe",
		"prepare": "husky",
		"seed": "chcp 65001 && tsx --tsconfig ./tsconfig.seed.json seed/index.ts",
		"start": "node dist/index.js ",
		"test": "vitest run"
	},
	"tsup": {
		"clean": true,
		"entry": ["!src/**/*.test.*", "!src/**/__tests__/**", "src"],
		"sourcemap": true,
		"splitting": false
	},
	"type": "commonjs",
	"version": "0.0.1"
}
