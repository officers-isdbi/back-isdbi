{
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importsNotUsedAsValues": "remove",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"outDir": "dist-seed",
		"paths": {
			/* common */
			"&common/*": ["common/models/*"],
			"$common/*": ["common/schemas/*"],
			"^common/*": ["common/validations/*"],
			"!common/*": ["common/types/*"],
			"~common/*": ["common/lib/*"],
			"@common/*": ["common/*"],
			/* server */
			"^server/*": ["src/validations/*"],
			"!server/*": ["src/types/*"],
			"#server/*": ["src/models/*"],
			"~server/*": ["src/docs/*"],
			"&server/*": ["src/config/*"],
			"$server/*": ["src/log/*"],
			"@server/*": ["src/*"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"types": ["vitest/globals"]
	},
	"exclude": ["node_modules", "common/lib", "common/actions", "common/utils/frontend", "common/hooks"],
	"include": ["common/**/*", "cli/**/*", "seed/**/*", "src/**/*"]
}
